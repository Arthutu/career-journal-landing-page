---
import Logo from "./Logo.astro";

const footerItems = [
    { title: "Product", links: [{ title: "Pricing", url: "/pricing" }] },
    {
        title: "Company",
        links: [{ title: "Contact", url: "mailto:arthurrodolfo81@gmail.com" }],
    },
    {
        title: "Legal",
        links: [
            { title: "Terms of Service", url: "/terms" },
            { title: "Privacy Policy", url: "/privacy-policy" },
        ],
    },
];
---

<footer
    class="mt-auto bg-slate-50 px-3 py-6 dark:border-t-2 dark:border-gigas-950 dark:bg-slate-950">
    <div
        class="flex flex-col gap-8 self-center md:flex-row md:justify-between lg:w-3/4">
        <div class="flex flex-col gap-2">
            <Logo />

            <div
                class="w-36 rounded-lg bg-titan-300 p-2 text-center font-bold motion-safe:hover:animate-wiggle dark:bg-gigas-900 dark:text-white">
                <a href="https://app.thecareerjournal.com/signup">Get Started</a
                >
            </div>
        </div>

        {
            footerItems.map(({ title, links }) => (
                <div>
                    <h3 class="text-lg font-bold dark:text-white">{title}</h3>
                    <ul>
                        {links.map(({ title, url }) => (
                            <li>
                                <a
                                    href={url}
                                    class="text-sm hover:text-titan-500 hover:underline dark:text-white dark:hover:text-gigas-500">
                                    {title}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </div>

    <div class="mt-8 text-sm text-gray-500 dark:text-gray-400">
        <p>
            &copy; {new Date().getFullYear()} Career Journal. All rights reserved.
        </p>
    </div>
</footer>
